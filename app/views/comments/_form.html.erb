<%= form_for([@post, @post.comments.build]) do |f| %>
 <div class="form-group">
  <%= f.label :nome %><br>
  <%= f.text_field :name, class: "form-control"%>
  </div>
  <div class="form-group">
  <%= f.label :comentario %><br>
  <%= f.text_area :body, class: "form-control"%><br>
  </div>
  <div class="form-group">
  <%=  f.submit "Novo Comentario", class: "btn btn-primary" %>
  </div>
<% end %>