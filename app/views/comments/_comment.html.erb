<div class="comment clearfix">
  <div class="comment_content">
    <p class="comment_name"><strong><%= comment.name %></strong></p>
    <p class="comment_body"><%= comment.body %></p>
    <p class="comment_time"><%= time_ago_in_words(comment.created_at) %> Atr√°s</p>
  </div>
  <p><%= link_to 'Apagar Comentario', [comment.post, comment],
                  method: :delete,
                  class: "button",
                  data: { confirm: 'Voce tem certeza disso?' } %>
  </p>

</div>
