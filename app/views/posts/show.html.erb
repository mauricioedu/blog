<div id="post_content">
<h1 class="title">
	<%= @post.title %>
</h1>
<p class="date">
	Submitted <%=time_ago_in_words(@post.created_at) %> atr√°s |
	<%= link_to 'Editar', edit_post_path(@post) %> |
	<%= link_to 'Deletar',  post_path(@post), method: :delete, data: {confirm: 'Voce tem certeza disso?'} %>
</p>

<p class="body">
	<%= @post.body %>
</p>

<div id="comments">
    <h2><%= @post.comments.count %> Comments</h2>
    <%= render @post.comments %>
 
    <h3>Adicionar um Comentario:</h3>
    <%= render "comments/form" %>
  </div>
</div>

</div>