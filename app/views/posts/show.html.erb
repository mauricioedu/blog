<div id="post_content">
<h1 class="title">
	<%= @post.title %>
</h1>
<p class="date">
	Submitted <%=time_ago_in_words(@post.created_at) %> atrás by <%= @post.user.name %> 
	<% if user_signed_in? and @post.user == current_user%>
	|<%= link_to 'Editar', edit_post_path(@post) %> |
	<%= link_to 'Deletar',  post_path(@post), method: :delete, data: {confirm: 'Voce tem certeza disso?'} %>
	<% end %>
</p>

<p class="body">
	<%= raw(@post.body) %>
</p>


<div id="comments">
    <h2><%= @post.comments.count %> Comentário</h2>
    <%= render @post.comments %>
 
    <h3>Adicionar um Comentário:</h3>
    <%= render "comments/form" %>
  </div>
</div>

</div>

